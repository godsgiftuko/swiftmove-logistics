{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",          // Use "ESNext" if you prefer ESM
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
